<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_category_list" model="ir.ui.view">
        <field name="name">res.partner.category.list.company</field>
        <field name="inherit_id" ref="base.view_partner_category_list" />
        <field name="model">res.partner.category</field>
        <field name="arch" type="xml">
            <data>
                <field name="color" position="after">
                    <field name="company_id"/>
                </field>
            </data>
        </field>
    </record>
    <record id="view_partner_category_form" model="ir.ui.view">
        <field name="name">res.partner.category.form.company</field>
        <field name="inherit_id" ref="base.view_partner_category_form" />
        <field name="model">res.partner.category</field>
        <field name="arch" type="xml">
            <data>
                <field name="parent_id" position="after">
                    <field name="company_id"/>
                </field>
            </data>
        </field>
    </record>
</odoo>